[binaries]
c = 'clang-18'
cpp = 'clang++-18'
c_ld = 'lld-18'
cpp_ld = 'lld-18'
ar = 'llvm-ar-18'
strip = 'llvm-strip-18'
nasm = 'nasm'

[built-in options]
c_args = ['-target', 'x86_64-pc-elf']
cpp_args = ['-target', 'x86_64-pc-elf']

[host_machine]
system = 'pc'
cpu_family = 'x86_64'
cpu = 'x86_64'
endian = 'little'